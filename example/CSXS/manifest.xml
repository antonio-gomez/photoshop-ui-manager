<?xml version="1.0" encoding="UTF-8"?>
<ExtensionManifest Version="5.0" ExtensionBundleId="me.antoniogomez.photoshop-ui-manager-example" ExtensionBundleVersion="1.0.0" ExtensionBundleName="Photoshop-UI-Manager Example" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<ExtensionList>
		<Extension Id="me.antoniogomez.photoshop-ui-manager-example" Version="1.0.0" />
	</ExtensionList>
	
	<ExecutionEnvironment>
		<HostList>
			<Host Name="PHXS" Version="[14.0,17]" />
			<Host Name="PHSP" Version="[14.0,17]" />
		</HostList>
		<LocaleList>
			<Locale Code="All" /> 
		</LocaleList>
		<RequiredRuntimeList>
			<RequiredRuntime Name="CSXS" Version="5.0" />
		</RequiredRuntimeList>
	</ExecutionEnvironment>
	
	<DispatchInfoList>
		<Extension Id="me.antoniogomez.photoshop-ui-manager-example">
			<DispatchInfo>
				<Resources>
					<!-- On CC 2015 and above Node.js is disabled by default -->
					<CEFCommandLine>
						<Parameter>--enable-nodejs</Parameter>
					</CEFCommandLine>
					<MainPath>./index.html</MainPath>
					<ScriptPath>./jsx/rootscript.jsx</ScriptPath>
				</Resources>
				<Lifecycle>
					<AutoVisible>true</AutoVisible>
				</Lifecycle>
				<UI>
					<Type>Panel</Type>
					<Menu>Photoshop-UI-Manager Example</Menu>
					<Geometry>
						<Size>
							<Height>100</Height>
							<Width>220</Width>
						</Size>
						<MinSize>
							<Height>100</Height>
							<Width>220</Width>
						</MinSize>
						<MaxSize>
							<Height>100</Height>
							<Width>220</Width>
						</MaxSize>
					</Geometry>
					<Icons>
						<Icon Type="Normal">./icons/DummyImageNormal.png</Icon>
						<Icon Type="RollOver">./icons/DummyImageRollover.png</Icon>
						<Icon Type="Disabled">./icons/DummyImageNormal.png</Icon>
						<Icon Type="DarkNormal">./icons/DummyImageDarkNormal.png</Icon>
						<Icon Type="DarkRollOver">./icons/DummyImageRollover.png</Icon>
					</Icons>
				</UI>
			</DispatchInfo>
		</Extension>
	</DispatchInfoList>
</ExtensionManifest>